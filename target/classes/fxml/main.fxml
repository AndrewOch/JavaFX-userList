<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.kpfu.itis.Controller"
            prefHeight="720.0" prefWidth="1280.0">

    <ScrollPane fx:id="messagesArea" minWidth="700" minHeight="500"
                maxWidth="400" maxHeight="700" layoutY="120.0">
        <VBox fx:id="messages">
            <children/>
        </VBox>
    </ScrollPane>
    <HBox>
        <TextField fx:id="name" minWidth="360" promptText="ФИО"/>
        <TextField fx:id="group" minWidth="80" promptText="Группа"/>
        <TextField fx:id="graduationYear" minWidth="80" promptText="год выпуска"/>
        <TextField fx:id="university" minWidth="180" promptText="Университет"/>
        <Button fx:id="addUser" minWidth="80">Добавить</Button>
    </HBox>

</AnchorPane>